- hosts: web
  become: yes
  become_user: root
  vars:
   - docroot: /etc/openvpn
  tasks:
   - name: Install OpenVPN
     apt:
      pkg: openvpn
      update_cache: true

   - name: Install Nginx
     apt:
       pkg: nginx
       update_cache: true
     when: ppastable|success
     notify:
      - Start Nginx
