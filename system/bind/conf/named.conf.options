acl "trusted" {
        10.8.0.0/24;  # host2
};


options {

        recursion yes;                 # enables resursive queries
        allow-recursion { trusted; };  # allows recursive queries from "trusted" clients
        listen-on { 10.8.0.1; };   # ns1 private IP address - listen on private network only

        forwarders {
                8.8.8.8;
                8.8.4.4;
        };
};
